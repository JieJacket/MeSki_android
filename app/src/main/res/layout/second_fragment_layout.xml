<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/id_top1"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:divider="@drawable/horizontal_divider"
        android:orientation="horizontal"
        android:showDividers="middle">

        <Button
            android:id="@+id/id_mSelectedOne"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/second_btn_selector"
            android:gravity="center"
            android:text="全部区域"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/id_mSelectedTwo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/second_btn_selector"
            android:gravity="center"
            android:text="不限价格"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/id_mSelectedThree"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/second_btn_selector"
            android:gravity="center"
            android:text="所有类型"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/id_mSelectedFour"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/second_btn_selector"
            android:gravity="center"
            android:text="推荐排序"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <jacketjie.common.libray.custom.view.pulltorefresh.PullRefreshLayout
            android:id="@+id/id_pullToRefresh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ListView
            android:id="@+id/id_firstListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />
        </jacketjie.common.libray.custom.view.pulltorefresh.PullRefreshLayout>
        <ImageView
            android:id="@+id/id_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent" />

        <jacketjie.common.libray.custom.view.animatedlayout.DrawableLinearLayout
            android:id="@+id/id_drawer_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <GridView
                android:id="@+id/id_mSelections"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f5f5f5"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:horizontalSpacing="10dp"
                android:numColumns="3"
                android:padding="10dp"
                android:scrollbars="none"
                android:verticalSpacing="10dp" />
        </jacketjie.common.libray.custom.view.animatedlayout.DrawableLinearLayout>
    </FrameLayout>
</LinearLayout>
