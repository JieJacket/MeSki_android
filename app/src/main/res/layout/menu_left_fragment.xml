<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:background="#F2F2F2"
        android:id="@+id/id_menuTop"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:divider="@drawable/horizontal_divider"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:showDividers="middle">

        <TextView
            android:id="@+id/id_menuOne"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/str_medical_emergency"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/id_menuTwo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/str_road_traffic"
            android:textSize="18sp" />

    </LinearLayout>

    <ListView
        android:id="@+id/id_menuListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/id_menuTop" />

</RelativeLayout>