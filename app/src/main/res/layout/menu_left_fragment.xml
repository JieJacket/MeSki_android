<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white" >

    <LinearLayout
        android:id="@+id/id_menuTop"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#D9D9D9"
        android:divider="@drawable/app_menu_divider"
        android:orientation="horizontal"
        android:showDividers="middle" >

        <TextView
            android:id="@+id/id_menuOne"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/leftbar_icon_aid"
            android:drawableStart="@drawable/leftbar_icon_aid"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:paddingLeft="16.7dp"
            android:paddingStart="16.7dp"
            android:paddingRight="5dp"
            android:paddingEnd="5dp"
            android:paddingTop="12dp"
            android:text="@string/str_medical_emergency"
            android:textColor="#444444"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/id_menuTwo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:paddingLeft="16.7dp"
            android:paddingStart="16.7dp"
            android:paddingRight="5dp"
            android:paddingEnd="5dp"
            android:paddingTop="12dp"
            android:drawableLeft="@drawable/leftbar_icon_traffic"
            android:drawableStart="@drawable/leftbar_icon_traffic"
            android:text="@string/str_road_traffic"
            android:textColor="#444444"
            android:textSize="18sp" />
    </LinearLayout>

    <ListView
        android:id="@+id/id_menuListView"
        android:divider="#DBDBDB"
        android:dividerHeight="0.33dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/id_menuTop" />

</RelativeLayout>