<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/action_back"
        android:layout_width="48dp"
        android:layout_height="36dp"
        android:layout_gravity="center_vertical"
        android:scaleType="centerInside"
        android:src="@drawable/icon_left_arrow_32" />

    <TextView
        android:id="@+id/action_search"
        android:layout_width="72dp"
        android:layout_height="36dp"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:text="@string/str_action_search"
        android:textColor="#cccccc"
        android:textSize="16sp" />

    <jacketjie.common.libray.custom.view.edittext.EditTextWithDrawable
        android:id="@+id/id_searchEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toLeftOf="@+id/action_search"
        android:layout_toRightOf="@+id/action_back"
        android:background="@drawable/edit_shape"
        android:drawablePadding="10dp"
        android:hint="搜索"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textColorHint="#cccccc"
        app:defaultDrawableLeft="@drawable/icon_magnifying_glass_01"
        app:defaultDrawableRight="@drawable/icon_microphone_white"
        app:drawableLeftEnable="@drawable/icon_magnifying_glass_01"
        app:drawableRightEnable="@drawable/icon_edit_clear" />

</RelativeLayout>